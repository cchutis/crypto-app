<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :class => 'text-field'%>
  <%= f.label :username %>
  <%= f.text_field :username, :class => 'text-field' %>
  <%= f.label :password %>
  <%= f.password_field :password, :class => 'text-field' %>
  <%= f.label :email %>
  <%= f.text_field :email, :class => 'text-field' %>
  <%= f.label :phone %>
  <%= f.text_field :phone, :class => 'text-field' %>
  <%= f.submit "Sign Up", :class => 'text-field' %>

<%end%>
