<% if flash[:message] %>
<%= flash[:message] %>
<% end %>
<%=form_for @trade do |f|%>
<%= f.label "Purchase Type" %>
<%=f.hidden_field :description, value: "Sell" %>
<%= f.label :crypto_id %>
<%=f.select :crypto_id, options_for_select([["Select One", ""], ["Bitcoin"], ["Bitcoin Cash","bitcoin_cash"], ["Ethereum"], ["Litecoin"], ["Stellar"]]) %>
<%= f.label "Sell" %>
<%= f.select :amount, options_for_select([["Select One", ""], ["1 /4",25], ["Half", 50], ["3/4", 75], ["Max", 100]]) %>
<%= f.submit "submit" %>
<% end %>
