<div class="buy-container">
    
<% if flash[:message] %>
<%= flash[:message] %>
<% end %>
<br>
Wallet:<%= @user.wallet %>
<br>
<%=form_for @trade do |f|%>
<%= f.label "Purchase Type" %>
<%=f.hidden_field :description, value: "Buy" %>
<%= f.label :crypto_id %>
<%=f.select :crypto_id, options_for_select([["Select One", ""], ["Bitcoin"], ["Bitcoin Cash",], ["Ethereum"], ["Litecoin"], ["Stellar"], ["EOS"], ["Qtum"], ["Monero"]]) %>
<%= f.label :amount %>
<%= f.number_field :amount%>
<%= f.submit "submit" %>
<% end %>
</div>

<div class="new-container">
    <%= image_tag('triangles.svg', :class => 'triangles') %>
</div>