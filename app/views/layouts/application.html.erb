<!DOCTYPE html>
<html>

<head>
  <title>CryptoChambr</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <link href="https://fonts.googleapis.com/css?family=Montserrat:100,400&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/9c26ad6839.js"></script>
</head>

<body>
    <div id="bkg">
      <% if logged_in? %>
      <ul class="navbar">
        <li><%= image_tag("crypto.svg", {:style => "padding: 10px 8px 0 10px; width:300px;"}) %></li>
        <li><a href="/profile"><i class="fas fa-user"></i> Profile</a></li>
        <li><a href="/add_funds"><i class="fas fa-money-bill-wave"></i> Add Funds</a></li>
        <li><a href="/cryptos"><i class="fas fa-chart-line"></i> Market</a></li>
        <li><a href="/buy"><i class="fas fa-coins"></i> Buy Coins</a></li>
        <li><a href="/sell"><i class="fas fa-money-check-alt"></i> Sell Coins</a></li>
        <li><a href="/trades"><i class="fas fa-history"></i> Trade History</a></li>
      </ul>
      <ul class="status-bar">
        <% if logged_in? %>
        <li style="color:white;">
          <%=button_to "Logout", '/logout', :method => :delete, :class => 'button'%>
        </li>
        <%else%>
        <li style="color:white;">
          <%=button_to "Login", '/login', :method => :get, :class => 'button'%>
        </li>
        <%end%>
      </ul>
      <%end%>
<div style="clear: both;"></div>
      <center>

        <br>


        <%= yield %>


      </center>

    </div>
  
</body>

</html>