<div class="login-container">
    <div class="signin-forms">
        <%if flash[:message]%>
        <%= flash[:message] %>
        <% end %>
        <h1>Please sign in below</h1>
        <%=form_tag "/login" do%>
        <p><%= text_field_tag :username, nil, placeholder: 'Username', class: 'text-field' %>
        <%= password_field_tag :password, nil, placeholder: 'Password', class: 'text-field' %></p>
        <p><%= button_tag type: 'submit', class: "login-button" do %>
        <i class="fa fa-lock" aria-hidden="true"></i> &nbsp; Enter the Chambr
        <% end %></p>
        <% end %>
    </div>
</div>

<div class="new-container">
    <%= image_tag('triangles.svg', :class => 'triangles') %>
</div>
